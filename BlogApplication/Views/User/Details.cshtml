@model BlogApplication.Models.User

@{
    ViewData["Title"] = "Details";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="display-4 text-center mb-4">Details</h1>
            <div class="card">
                <div class="card-body">
                    <h4 class="text-muted text-center mb-4">User</h4>
                    <hr class="my-4" />
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.Username)
                        </div>
                        <div class="col-sm-8 text-right">
                            @Html.DisplayFor(model => model.Username)
                        </div>
                        <dt class="col-sm-2">
                            <span style="font-style: italic;">@Html.DisplayNameFor(model => model.Image)</span>
                        </dt>
                        <dd class="col-sm-10">
                            @if (Model.Image != null)
                            {
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)" alt="User Image" class="float-right" style="max-width: 200px; max-height: 200px;" />
                            }
                            else
                            {
                                <span style="font-style: italic;">No Image Available</span>
                            }
                        </dd>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center mt-4">
                <div class="col-md-6">
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .col-sm-8 {
        text-align: right;
    }
</style>
