@model BlogApplication.Models.LoginEntity
@{
    ViewData["Title"] = "Logout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h1 class="display-4 mb-4">Logout</h1>
                    <hr class="my-4" />
                    <p class="lead">
                        <span style="font-style: italic;">You successfully logged out of your account!</span>
                    </p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-block">Back to Home menu</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}