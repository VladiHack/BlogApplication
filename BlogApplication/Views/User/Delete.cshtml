@model BlogApplication.Models.User

@{
    ViewData["Title"] = "Delete";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="display-4 text-center mb-4">Delete</h1>
            <div class="card">
                <div class="card-body">
                    <h3 class="text-muted text-center mb-4">Are you sure you want to delete this?</h3>
                    <h4 class="text-muted text-center mb-4">User</h4>
                    <hr class="my-4" />
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.Username)
                        </div>
                        <div class="col-sm-8 text-right">
                            @Html.DisplayFor(model => model.Username)
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.Email)
                        </div>
                        <div class="col-sm-8 text-right">
                            @Html.DisplayFor(model => model.Email)
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">
                            <span style="font-style: italic;">@Html.DisplayNameFor(model => model.Image)</span>
                        </div>
                        <div class="col-sm-8 text-right">
                            @if (Model.Image != null)
                            {
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)" alt="User Image" class="img-fluid" style="max-width: 200px; max-height: 200px;" />
                            }
                            else
                            {
                                <span style="font-style: italic;">No Image Available</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center mt-4">
                <div class="col-md-6">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="UserId" />
                        <div class="d-flex justify-content-between">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .col-sm-8 {
        text-align: right;
    }

    .img-fluid {
        max-width: 100%;
        height: auto;
    }
</style>