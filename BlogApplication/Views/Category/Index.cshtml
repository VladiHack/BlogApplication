@model IEnumerable<BlogApplication.Models.Category>
@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog App - Categories</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #f8f9fa;
        }

        .content {
            padding: 2rem;
        }

        .table {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .table thead th {
                background-color: #dc3545;
                color: #fff;
                font-weight: bold;
                border-color: #dc3545;
                padding: 1rem;
            }

            .table td {
                border-color: #dee2e6;
                padding: 1rem;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            transition: background-color 0.3s ease, border-color 0.3s ease;
            font-size: 1.1rem;
            padding: 0.75rem 1.5rem;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }

            .btn-info:hover {
                background-color: #138496;
                border-color: #138496;
            }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }
    </style>
</head>
<body>
    <div class="content">
        <h1 class="display-4 mb-4">Categories</h1>
        <div class="table-responsive">
            <table id="PostTable" class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th><span style="font-style: italic;">Name</span></th>
                        <th><span style="font-style: italic;">Actions</span></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><span style="font-style: italic;">@Html.DisplayFor(modelItem => item.Name)</span></td>
                            <td>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.CategoryId">
                                    <span style="font-style: italic;">Delete</span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="d-flex justify-content-end mt-3">
            <a class="btn btn-primary" asp-action="Create"><span style="font-style: italic;">Create New</span></a>
        </div>
    </div>
</body>
</html>